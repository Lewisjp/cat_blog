<h1>Collective of Cat Thoughts</h1>

<table>
	<tr>
    <th>Cat Thought</th>
    <th>...The Full Story...</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= link_to 'Read it', post %></td>
      <td><%= link_to 'Change it', edit_post_path(post) %></td>
      <td><%= link_to 'Forget it', post_path(post),
                    method: :delete, data: { confirm: 'Really?' } %></td>
    </tr>
  <% end %>
</table>
<br><br>
<%= link_to "Post your cat thought", new_post_path %>
